model Note {
  id        String   @id @default(uuid()) @db.Uuid 
  title     String
  content   String
  isPublic  Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    String  @db.Uuid
  user      User     @relation(fields: [userId], references: [id])
}